@model AppStore.Data.Models.Categoria

@{
    ViewData["Title"] = $"Excluir categoria {Model.Nome}";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja excluir a categoria @Model.Nome?</h3>
<hr />

<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
